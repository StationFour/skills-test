@{
    ViewData["Title"] = "Customer Data";
}

<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<h1>Customer Data.</h1>
<p>
    <label for="Customers">Total Number of Customers:</label>
    @ViewBag.numberOfCustomers
</p>
<p>
    <label for="States">Total Number of States With Customers:</label>
    @ViewBag.numberOfStatesWithCustomers
</p>
<p>
    <h3 for="Customers" style="text-align:center">Average Networth of Customers In Each City</h3>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th align="left">City</th>
                    <th align="left">Net Worth</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.NetWorthPerCity)
                {
                    <tr>
                        <td align="left">@item.City</td>
                        <td align="left">@item.AverageNetWorth</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />
        <div class="container">
            <h3 for="Customers" style="text-align:center">Average Customer Distance From Center of State</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th align="left">State</th>
                        <th align="left">Average Distance (Miles)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.AverageDistanceFromCenterState)
                    {
                    <tr>
                        <td align="left">@item.State</td>
                        <td align="left">@item.AverageDistanceFromCenter</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</p>
